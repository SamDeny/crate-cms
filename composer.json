{
    "name": "crate/cms",
    "type": "project",
    "version": "0.1.0",
    "description": "A headless modular API-driven content management, inspired by Cockpit.",
    "keywords": [
        "cms",
        "content",
        "headless",
        "api",
        "cockpit"
    ],
    "homepage": "https://crate.md",
    "license": "MIT",
    "authors": [
        {
            "name": "rat.md",
            "email": "info@crate.md",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0.0",
        "crate/citrus": "^0.1.0",
        "crate/composer": "^0.1.0",
        "crate/core": "^0.1.0",
        "crate/channels": "^0.1.0",
        "crate/collections": "^0.1.0",
        "crate/backend": "^0.1.0",
        "crate/singletons": "^0.1.0",
        "crate/forms": "^0.1.0",
        "mongodb/mongodb": "^1.12.0"
    },
    "scripts": {
        "local": "php -S 127.0.0.1:8000 -t ./public"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "crate/composer": true
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "../modules/Core",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../modules/Backend",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../modules/Channels",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../modules/Collections",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../modules/Forms",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../modules/Frontend",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../modules/Singletons",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../vendor/Citrus",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../vendor/Composer",
            "options": {
                "symlink": true
            }
        }
    ],
    "require-dev": {
        "symfony/var-dumper": "^6.0"
    }
}
